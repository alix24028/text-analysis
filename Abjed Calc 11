            margin-top: 20px;
            display: flex;
            flex-direction: row; /* Arrange columns horizontally */
            align-items: flex-start; /* Align columns closely */
        }
        .element-title {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .element-row {
            display: flex;
            flex-direction: column; /* Arrange rows vertically */
            margin-right: 10px; /* Small space between columns */
        }
        .element-header {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .element-stats {
            margin-top: 20px;
            font-size: 14px;
        }
